<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_mail_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/text_padding_horizontal"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingRight="@dimen/text_padding_horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_mail_sender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingLeft="@dimen/text_padding_horizontal"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingRight="@dimen/text_padding_horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_mail_subject" />

    <WebView
        android:id="@+id/fragment_mail_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_mail_sender">

    </WebView>

</androidx.constraintlayout.widget.ConstraintLayout>